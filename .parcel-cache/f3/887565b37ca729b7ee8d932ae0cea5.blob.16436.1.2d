* {
  margin: 0;
  padding: 0;
}

html {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
}

.list-container {
  width: 50%;
  height: 100vh;
}

.btn {
  background-color: white;
  border: 1px solid blue;
}

.to_do {
  background-color: #f2e529;
}
.to_do--nav {
  border: 1px solid blue;
  width: 150px;
  height: 150px;
  display: block;
  position: absolute;
  top: 40vh;
}

.done {
  background-color: #0d0d0d;
}