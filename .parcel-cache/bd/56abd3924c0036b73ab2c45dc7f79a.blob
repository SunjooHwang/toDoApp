* {
  margin: 0;
  padding: 0;
}

html {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
}

.list-container {
  width: 50%;
  height: 100vh;
}
.list-container .list-title {
  font-size: 2rem;
}

.btn {
  border: none;
  background-color: transparent;
  font-size: 1.2rem;
  text-transform: uppercase;
  cursor: pointer;
  text-align: right;
}

.to_do {
  background-color: #f2e529;
}
.to_do--nav {
  width: 150px;
  height: 150px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: absolute;
  top: 40vh;
  left: 1vw;
}
.to_do--nav label {
  color: #918581;
  font-size: 1.2rem;
  text-align: right;
}

.done {
  background-color: #0d0d0d;
}
