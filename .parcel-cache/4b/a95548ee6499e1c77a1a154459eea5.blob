* {
  margin: 0;
  padding: 0;
}

html {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
}

li {
  list-style: none;
}

.container {
  width: 100vw;
  height: 100%;
  display: grid;
  grid-template-columns: repeat(2, 50%);
  grid-template-areas: "todo done";
  overflow: hidden;
}

.list-container {
  height: 100vh;
}
.list-container .list-title {
  font-size: 2rem;
  text-transform: uppercase;
}

.btn {
  border: none;
  background-color: transparent;
  font-size: 1.2rem;
  text-transform: uppercase;
  cursor: pointer;
  text-align: right;
}

.to_do {
  background-color: #f2e529;
  display: grid;
  grid-template-columns: 20% 10% 60% 10%;
  grid-template-rows: repeat(5, 20%);
  grid-template-areas: " . . . ." ". list-container list-container ." " nav list-container list-container ." " . list-container list-container ." " . . . .";
  grid-area: todo;
}
.to_do--nav {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  grid-area: nav;
  padding-right: 1rem;
}
.to_do--nav label {
  color: #918581;
  font-size: 1.2rem;
  text-align: right;
}
.to_do--list-container {
  background-color: white;
  display: flex;
  flex-direction: row;
  grid-area: list-container;
}

.done {
  background-color: #0d0d0d;
  grid-area: done;
}
